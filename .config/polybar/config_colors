

[colors]
;; --- GENTOO DARK PALETTE (Based on your values) ---
;; Base Colors
gentoo-bg       = #1E1E1E
gentoo-bg-alt   = #151515
gentoo-fg       = #DDDAEC
gentoo-white    = #FFFFFF

;; Accents
gentoo-purple   = #54487A
gentoo-light    = #7A5ADA
gentoo-lavender = #9D8BC9
gentoo-blue     = #6272A4
gentoo-red      = #C01C28
gentoo-cyan     = #2AA198
gentoo-yellow   = #CD9309

;; --- POLYBAR MAPPINGS ---
;; We map the generic names to the Gentoo specific tones to force the theme.

; Background: Deep Dark Grey (#1E1E1E)
bg-main         = ${colors.gentoo-bg}
bg-dim          = ${colors.gentoo-bg-alt}

; Foreground: Lavender White (#DDDAEC)
fg-main         = ${colors.gentoo-fg}
fg-dim          = ${colors.gentoo-blue}

; "Green" (Used for Title & Date): Mapped to Main Gentoo Purple
; This turns your main bars Purple to match the logo.
green           = ${colors.gentoo-purple}
green-warmer    = ${colors.gentoo-light}
green-cooler    = ${colors.gentoo-bg-alt}
green-faint     = ${colors.gentoo-blue}
green-intense   = ${colors.gentoo-light}

; "Yellow" (Used for Memory): Mapped to Lighter Purple/Lavender
; This creates a nice gradient from the main purple.
yellow          = ${colors.gentoo-light}
yellow-warmer   = ${colors.gentoo-lavender}
yellow-cooler   = ${colors.gentoo-blue}
yellow-faint    = ${colors.gentoo-bg-alt}
yellow-intense  = ${colors.gentoo-white}

; "Blue" (Used for Keyboard/Tray): Mapped to Muted Blue-Grey
blue            = ${colors.gentoo-blue}
blue-warmer     = ${colors.gentoo-lavender}
blue-cooler     = ${colors.gentoo-bg-alt}
blue-faint      = ${colors.gentoo-bg-alt}
blue-intense    = ${colors.gentoo-cyan}

; "Red" (Used for CPU/Urgent): Mapped to Red or Lavender
; We use your specific Red (#C01C28) for high contrast alerts.
red             = ${colors.gentoo-red}
red-warmer      = #F66151
red-cooler      = ${colors.gentoo-purple}
red-faint       = ${colors.gentoo-bg-alt}
red-intense     = #FF0000

; "Disabled" (Volume backgrounds): Mapped to the Darker Inset Grey
disabled        = ${colors.gentoo-bg-alt}

; Unused mappings (kept for compatibility)
magenta         = ${colors.gentoo-lavender}
cyan            = ${colors.gentoo-cyan}
